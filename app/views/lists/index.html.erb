<div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/1040159/pexels-photo-1040159.jpeg?cs=srgb&dl=pexels-jeshootscom-1040159.jpg&fm=jpg);">
  <div class="container_header">
    <h1 id="font-head-title"><strong>Net</strong >Fonq</h1>
    <p>
      <span data-controller="typed-js"></span>
    </p>
    <%= link_to("Create a new list", new_list_path, class:"btn btn-flat") %>
  </div>
</div>

<div class="container">
  <div class="cards mt-3">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: "text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
